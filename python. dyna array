#include <iostream>
using namespace std;
int main() {
    int size;
    cout << "Enter the number of elements: ";
    cin >> size;
    int* array = new int[size];
    cout << "Enter the elements of the array:" << endl;
    for (int i = 0; i < size; ++i) {
        cout << "Element at index " << i << ": ";
        cin >> array[i];
    }
    cout << "Array values are:" << endl;
    for (int i = 0; i < size; ++i) {
        cout << array[i] << " ";
    }
    cout << endl;

    return 0;
}
